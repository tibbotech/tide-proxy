{
    "compilerOptions": {
        "declaration": true,
        "baseUrl": "./",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "esnext", "DOM", "ES2020"
        ],
        "target": "ES6",
        "strict": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
        "**/*-spec.ts"
    ]
}